def hitung_rata(nilai1, nilai2 ,nilai3):
    return (nilai1 + nilai2 + nilai3) / 3
def tampilkan_nilai(nilai_akhir):
    print("nilai rata-rata kamu adalah:", nilai_akhir)
    if nilai_akhir >= 97:
        print("kamu dinyatakan lulus")

    else:

        print("kamu dinyatakan tidak lulus")

print("====program penilain rata-rata====")

n1 = float(input("massukkan nilai 1:"))
n2 = float(input("massukkan nilai 2:"))
n3 = float(input("massukan nilai 3:"))
rata = hitung_rata(n1, n2, n3) 
tampilkan_nilai(rata)                   
